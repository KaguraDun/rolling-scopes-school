{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 80, 2, { "ignoreComments": true }],
    "indent": ["warn", 2],
    "no-unused-vars": "warn",
    "no-var": "error",
    "semi": "error",
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-use-before-define": "error"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["eslint:recommended"]
}
